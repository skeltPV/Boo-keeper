<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/userInput"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter a Book"
        android:inputType="textPersonName"
        android:layout_marginTop="67dp"
        android:layout_below="@+id/FirstText"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:onClick="saveButtonClick"
        android:text="Save To My List"
        tools:text="Save To My List"
        android:layout_below="@+id/userInput"
        android:layout_alignStart="@+id/userInput" />

    <Button
        android:id="@+id/list_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/save_button"
        android:layout_below="@+id/save_button"
        android:layout_marginTop="36dp"
        android:onClick="listButton"
        android:text="Show My Books" />

    <TextView
        android:id="@+id/FirstText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="Add To Your Collection"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>